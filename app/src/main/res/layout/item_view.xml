<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="@drawable/border"
    tools:visibility="visible"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/provenance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="provenance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/type"/>

    <TextView
        android:id="@+id/Depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/provenance"
        app:layout_constraintLeft_toRightOf="@id/horloge1"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:rotation="180"
        app:layout_constraintLeft_toRightOf="@id/Depart"
        app:layout_constraintBottom_toBottomOf="@id/Depart"/>

    <ImageView
        android:id="@+id/horloge1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:layout_marginStart="-5dp"
        app:srcCompat="@android:drawable/ic_menu_recent_history"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/Depart"/>

    <ImageView
        android:id="@+id/horloge2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="-5dp"
        android:scaleType="centerInside"
        app:srcCompat="@android:drawable/ic_menu_recent_history"
        app:layout_constraintLeft_toRightOf="@id/imageView4"
        app:layout_constraintBottom_toBottomOf="@id/Depart"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/Arrivee"/>

    <TextView
        android:id="@+id/Arrivee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@id/horloge2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>